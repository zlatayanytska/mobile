<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="255dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/custom_imageView"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="9dp"
        android:contentDescription="@string/icon_2"
        android:textColor="@color/colorPurple"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/custom_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@id/custom_imageView"
        android:gravity="center_vertical"
        android:textColor="@color/colorPurple"
        android:textSize="18sp"
        tools:ignore="RtlHardcoded,SmallSp" />

    <TextView
        android:id="@+id/custom_desctription"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@id/custom_title"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@id/custom_imageView"
        android:gravity="center_vertical"
        android:textColor="@color/colorPurple"
        android:textSize="10sp"
        tools:ignore="RtlHardcoded,SmallSp" />

    <TextView
        android:id="@+id/custom_year"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/custom_desctription"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="44dp"
        android:layout_toEndOf="@id/custom_imageView"
        android:gravity="center_vertical"
        android:textColor="@color/colorPurple"
        android:textSize="10sp"
        tools:ignore="RtlHardcoded,SmallSp" />

</RelativeLayout>